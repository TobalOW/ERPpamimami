<div class="row col-lg-12">
  <h1 class="page-heading">Todas las ventas</h1>
</div>

<div class="row col-lg-12">
  <div class="panel-body">
   <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover" id="dataTables-categorias">
      <thead>
        <tr>
          <td>Id</td>
          <td>Nombre</td>
          <td>Precio</td>
          <td>Dueño</td>
          <td>Categoría</td>
          <td>Acciones</td>
        </tr>
      </thead>
        <tbody>
          <% @products.each do |product| %>
          <tr>
            <td><%= product.id %></td>
            <td><%= product.name %></td>
            <td><%= product.price %></td>
            <td><%= product.user.email %></td>
            <td><%= product.category.name %></td>
            <td>
                 <%= link_to edit_product_path(product) do %>
                  <i class="fa fa-pencil" aria-hidden="true"></i> Editar
                <% end %>
              </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
