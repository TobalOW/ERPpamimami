<div class="row col-lg-12">
  <h1 class="page-heading">Todos los Compradores</h1>
</div>


<div class="row col-lg-12">
  <div class="panel-body">
   <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover" id="dataTables-categorias">
      <thead>
        <tr>
          <td>Id</td>
          <td>Nombre</td>
          <td>Rut</td>
          <td>Acciones</td>
        </tr>
      </thead>
        <tbody>
          <% @buyers.each do |buyer| %>
          <tr>
            <td><%= buyer.id %></td>
            <td><%= buyer.name %></td>
            <td><%= buyer.rut %></td>
            <td>
                 <%= link_to edit_buyer_path(buyer) do %>
                  <i class="fa fa-pencil" aria-hidden="true"></i> Editar
                <% end %>
              </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
