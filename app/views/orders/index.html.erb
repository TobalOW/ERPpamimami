<div class="row col-lg-12">
  <h1 class="page-heading">Todas las ventas</h1>
</div>


<div class="row col-lg-12">
  <div class="panel-body">
   <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover" id="dataTables-categorias">
      <thead>
        <tr>
          <td>Id</td>
          <td>Nombre</td>
          <td>Direcci√≥n</td>
          <td>Rut</td>
          <td>Total</td>
          <td>Contador</td>
          <td>Abonos</td>
        </tr>
      </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.id %></td>
            <td><%= order.buyer.name %></td>
            <td><%= order.address %></td>
            <td><%= order.buyer.rut %></td>
            <td><%= order.total %></td>
            <td><%= order.order_details.count %></td>
            <td>
                 <%= link_to history_order_path(order) do %>
                  <i class="fa fa-pencil" aria-hidden="true"></i> Ver
                <% end %>
                 <%= link_to payment_order_path(order) do %>
                  <i class="fa fa-shopping-cart" aria-hidden="true"></i> Abonos
                <% end %>

              </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
