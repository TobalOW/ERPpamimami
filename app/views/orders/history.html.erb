<div class="row col-lg-12">
  <h1 class="page-heading">Detalle de la Orden <%= @histories.first.order_id %> </h1>
</div>

<div class="row col-lg-12">
  <div class="panel-body">
   <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover" id="dataTables-categorias">
      <thead>
        <tr>
          <td>Id</td>
          <td>Orden de compra</td>
          <td>Producto</td>
          <td>Precio</td>
          <td>Cantidad</td>
          <td>Total</td>
        </tr>
      </thead>
        <tbody>
          <% @histories.each do |history| %>
          <tr>
            <td><%= history.id %></td>
            <td><%= history.order_id %></td>
            <td><%= history.product.name %></td>
            <td><%= history.price %></td>
            <td><%= history.quantity %></td>
            <td><%= history.total %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%= link_to new_deposit_path(:order_id=> params[:id]) do %>
  <i class="fa fa-shopping-cart" aria-hidden="true"></i> Abonar
<% end %>
