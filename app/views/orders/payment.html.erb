

<% if @payments.length > 0 %>
  <div class="row col-lg-12">
    <h1 class="page-heading">Detalle de la Orden <%= @order.id %> </h1>
  </div>
  <div class="row col-lg-12">
    <div class="panel-body">
     <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover" id="dataTables-categorias">
        <thead>
          <tr>
            <td>Id</td>
            <td>Fecha</td>
            <td>Monto</td>
            <td>Tipo de pago</td>
            <td>Comentarios</td>
          </tr>
        </thead>
          <tbody>
            <% @payments.each do |payment| %>
            <tr>
              <td><%= payment.id %></td>
              <td><%= payment.created_at.to_date %></td>
              <td><%= payment.total %></td>
              <td><%= payment.method %></td>
              <td><%= payment.comment %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% else %>
  <div class="alert alert-danger" role="alert">
    No existen abonos para la orden <%= @order.id %>
  </div>
<% end %>
